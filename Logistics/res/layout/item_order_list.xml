<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/v_top_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:background="@color/line_color" />
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:background="@color/line_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_24"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_14"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="已签收，签收人是【莉丝】，感谢使用玉红物流，期待再次为您服务"
                android:textColor="@color/main_tab_color_1"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order_status"
                android:layout_marginTop="@dimen/margin_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2016-07-02 10:04:09"
                android:textColor="@color/main_tab_color_1"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_26"
        android:layout_marginTop="@dimen/margin_14"
        android:src="@drawable/search_result_order_status_bg1" />

    <ImageView
        android:id="@+id/iv_icon2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_26"
        android:layout_marginTop="@dimen/margin_14"
        android:src="@drawable/search_result_order_status_bg2" />

</RelativeLayout>